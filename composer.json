{
    "name": "vcommerce/eticaret",
    "description": "V-Commerce Enterprise E-Ticaret Platformu",
    "type": "project",
    "license": "proprietary",
    "version": "2.0.0",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.6",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "core/",
            "config/"
        ],
        "files": [
            "includes/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}